@{
    ViewData["Title"] = "Delete Movie";
}

@model MovieResponse;

<h2>Confirm Deletion</h2>
<h3>Are you sure you wnat to delete the record for the @Model.year @Model.title?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MyMovies" class="btn btn-primary">Cancel</a>
    <input type="hidden" asp-for="MovieId" />
</form>